@{
    ViewData["Title"] = "Cadastrar";
}

<form class="form" id="form" asp-controller="Time" asp-action="Cadastrar" method="POST">
    <label for="Pais">País: </label>
    <input type="text" id="Pais" name="Pais">

    <label for="Patrocinador">Patrocinador: </label>
    <input type="text" id="Patrocinador" name="Patrocinador">

    <label for="Titulos">Títulos: </label>
    <input type="text" id="Titulos" name="Titulos">

    <label for="JogadorDeDestaque">Jogador De Destaque: </label>
    <input type="text id="JogadorDeDestaque" name="JogadorDeDestaque">

    <label for="Confederacao">Confederação: </label>
