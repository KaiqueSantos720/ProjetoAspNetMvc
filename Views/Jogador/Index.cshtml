@model IEnumerable<TwoFootball.Models.Jogador>
@{
    ViewData["Title"] = "Jogador";
}
<h1>@ViewData["Title"]</h1>

@if(Model.Count() == 0)
{
    <p>Nenhum jogador cadastrado</p>
    <a class="btn btn-outline-dark" asp-controller="Jogador" asp-action="Cadastrar">Cadastre um novo jogador</a>
}
else
{
    <table class="table table-dark">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Posicao</th>
                <th>Numero</th>
                <th>Copas Participadas</th>
                <th>Nacionalidade</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var jogador in Model)
            {
                <tr>
                    <td>@jogador.Id</td>
                    <td>@jogador.Nome</td>
                    <td>@jogador.Posicao</td>
                    <td>@jogador.Numero</td>
                    <td>@jogador.CopasParticipadas</td>
                    <td>@jogador.Nacionalidade</td>
                    <td>
                        <a class="btn btn-outline-info" asp-controller="Jogador" asp-action="Show" asp-route-id="@jogador.Id">Ver</a>
                        <a class="btn btn-outline-light" asp-controller="Jogador" asp-action="Update" asp-route-id="@jogador.Id">Update</a>
                        <a class="btn btn-outline-danger" asp-controller="Jogador" asp-action="Delete" asp-route-id="@jogador.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a class="btn btn-outline-dark" asp-controller="Jogador" asp-action="Cadastrar">Cadastre um novo jogador</a>
}