@model IEnumerable<TwoFootball.Models.Partida>
@{
    ViewData["Title"] = "Partidas";
}
<h1>@ViewData["Title"]</h1>

@if(Model.Count() == 0)
{
    <p>Nenhuma partida cadastrada</p>
    <a class="btn btn-outline-dark" asp-controller="Partida" asp-action="Cadastrar">Cadastre uma nova partida</a>
}
else
{
    <table class="table table-dark">
        <thead>
            <tr>
                <th>Id</th>
                <th>Time Da Casa</th>
                <th>Time Visitante</th>
                <th>Estadio</th>
                <th>Data</th>
                <th>Ação</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var partida in Model)
            {
                <tr>
                    <td>@partida.Id</td>
                    <td>@partida.TimeDaCasa</td>
                    <td>@partida.TimeVisitante</td>
                    <td>@partida.Estadio</td>
                    <td>@partida.Data</td>
                    <td>
                        <a class="btn btn-outline-info" asp-controller="Partida" asp-action="Show" asp-route-id="@partida.Id">Ver</a>
                        <a class="btn btn-outline-light" asp-controller="Partida" asp-action="Update" asp-route-id="@partida.Id">Update</a>
                        <a class="btn btn-outline-danger" asp-controller="Partida" asp-action="Delete" asp-route-id="@partida.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a class="btn btn-outline-dark" asp-controller="Partida" asp-action="Cadastrar">Cadastre uma nova partida</a>
}