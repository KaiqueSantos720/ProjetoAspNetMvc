@model TwoFootball.Models.Grupo
@{
    ViewData["Title"] = "Atualizar Grupo";
}
<h1>@ViewData["Title"]</h1>

<p>Utilize o formulário para Atualizar o grupo</p>

<form class="form" asp-controller="Grupo" asp-action="Update" asp-route-id="@Model.Id" method="POST">
    @* Não pode alterar o ID *@
    
    <label for="Nome">Nome</label>
    <input type="text" id="Nome" value="@Model.Nome" name="Nome" asp-for="@Model.Nome">
    <span asp-validation-for="@Model.Nome" class="text-danger"></span>

    <label for="Pote1">Pote 1</label>
    <input type="text" id="Pote1" value="@Model.Pote1" name="Pote1" asp-for="@Model.Pote1">
    <span asp-validation-for="@Model.Pote1" class="text-danger"></span>

    <label for="Pote2">Pote 2</label>
    <input type="text" id="Pote2" value="@Model.Pote2" name="Pote2" asp-for="@Model.Pote2">
    <span asp-validation-for="@Model.Pote2" class="text-danger"></span>

    <label for="Pote3">Pote 3</label>
    <input type="text" id="Pote3" value="@Model.Pote3" name="Pote3" asp-for="@Model.Pote3">
    <span asp-validation-for="@Model.Pote3" class="text-danger"></span>

    <label for="Pote4">Pote 4</label>
    <input type="text" id="Pote4" value="@Model.Pote4" name="Pote4" asp-for="@Model.Pote4">
    <span asp-validation-for="@Model.Pote4" class="text-danger"></span>

    <input class="submit" type="submit" value="Atualizar">
</form>