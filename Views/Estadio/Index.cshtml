@model IEnumerable<TwoFootball.Models.Estadio>
@{
    ViewData["Title"] = "Estadio";
}
<h1>@ViewData["Title"]</h1>

@if(Model.Count() == 0)
{
    <p>Nenhum estadio cadastrado</p>
    <a class="btn btn-outline-dark" asp-controller="Estadio" asp-action="Cadastrar">Cadastre um novo estadio</a>
}
else
{
    <table class="table table-dark">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Cidade</th>
                <th>Capacidade</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var estadio in Model)
            {
                <tr>
                    <td>@estadio.Id</td>
                    <td>@estadio.Nome</td>
                    <td>@estadio.Cidade</td>
                    <td>@estadio.Capacidade</td>
                    <td>
                        <a class="btn btn-outline-info" asp-controller="Estadio" asp-action="Show" asp-route-id="@estadio.Id">Ver</a>
                        <a class="btn btn-outline-light" asp-controller="Estadio" asp-action="Update" asp-route-id="@estadio.Id">Update</a>
                        <a class="btn btn-outline-danger" asp-controller="Estadio" asp-action="Delete" asp-route-id="@estadio.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a class="btn btn-outline-dark" asp-controller="Estadio" asp-action="Cadastrar">Cadastre um novo estadio</a>
}